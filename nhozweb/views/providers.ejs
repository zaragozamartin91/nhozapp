<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <% include mdlite_imports.ejs %>

    <style>
      .page-content {
        padding: 10px;
      }
      table {
        width: 100%;
      }
    </style>

  </head>
  <body>


    <!-- The drawer is always open in large screens. The header is always shown,
      even in small screens. -->
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer
                mdl-layout--fixed-header">
      
      <!-- ENCABEZADO DE BUSQUEDA -->
      <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
          <div class="mdl-layout-spacer"></div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable mdl-textfield--floating-label mdl-textfield--align-right">
            <label class="mdl-button mdl-js-button mdl-button--icon" for="search-input">
              <img src="images/ic_search_white_24px.svg" alt="Search">
            </label>
            <div class="mdl-textfield__expandable-holder">
              <form action="/providers" id="search-form" method="get">
                <input class="mdl-textfield__input" type="text" name="id" id="search-input">
              </form>
            </div>
          </div>
        </div>
      </header>

      <% include drawer_menu %>

      <main class="mdl-layout__content">
        <div class="page-content">
        
            <h1><%=title %></h1>
            <% if(providers) { %>
              <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
                <thead>
                  <tr>
                    <th class="mdl-data-table__cell--non-numeric">ID</th>
                    <th class="mdl-data-table__cell--non-numeric">Nombre</th>
                  </tr>
                </thead>
                <tbody>

              <% providers.forEach( function(provider) { %>
                <tr>
                  <td class="mdl-data-table__cell--non-numeric"><%=provider.id %></td>
                  <td class="mdl-data-table__cell--non-numeric"><%=provider.name %></td>
                </tr>
              <% } ); %>
            <% } %>

            
        </div>
      </main>
    </div>

    <script src="javascripts/search-trigger.js" />
  </body>
</html>
